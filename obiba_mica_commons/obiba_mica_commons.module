/**
 * Change a keyword into a readable string.
 *
 * @param string $str
 *   A given string to clear.
 *
 * @return string
 *   A clear string.
 */
function obiba_mica_commons_clean_string($str) {
  $taxonomies = &drupal_static(__FUNCTION__);
  if (!isset($taxonomies)) {
    $taxonomies = obiba_mica_commons_get_taxonomies_by_entity('study');
  }
  global $language;
  if (!empty($str)) {
    $translated_str = obiba_mica_commons_get_translated_taxonomies($taxonomies, $str, $language->language);
  }
  return $translated_str;
}

/**
 * Get translated taxonomies
 */

function obiba_mica_commons_get_translated_taxonomies($taxonomies, $str, $local) {
    foreach ($taxonomies as $taxonomy) {
      foreach ($taxonomy->vocabularies as $vocabulary) {
        if (!empty($vocabulary->terms)) {
          foreach ($vocabulary->terms as $term) {
            if ($term->name == $str) {
              if (!empty($local) && $local !== 'und') {
                return $translation = obiba_mica_commons_get_localized_field($term, 'title');
              }
            }
          }
        }
      }
    }
}

/**
 * Get taxonomies by entity target
 *
 */
function obiba_mica_commons_get_taxonomies_by_entity($entity_target) {
  $service = new MicaTaxonomyResource();
  $taxonomies = $service->getTaxonomySummaries('_filter?target=' . $entity_target);
